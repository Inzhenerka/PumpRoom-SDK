{
  "name": "pumproom-sdk",
  "version": "1.2.0",
  "description": "Lightweight SDK for integrating Learning Management Systems with PumpRoom platform",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/bundle/pumproom-sdk-latest.esm.js",
      "require": "./dist/bundle/pumproom-sdk-latest.umd.js"
    }
  },
  "files": [
    "dist/bundle",
    "dist/types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build -c vite.config.lib.ts && tsc -p tsconfig.build.json --emitDeclarationOnly && npm run docs && vite build -c vite.config.site.ts",
    "build-lib": "vite build -c vite.config.lib.ts && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "build-site": "npm run docs && vite build -c vite.config.site.ts",
    "dev": "vite build -c vite.config.lib.ts && npm run docs && vite -c vite.config.site.ts",
    "docs": "typedoc --options typedoc.json --skipErrorChecking",
    "test": "vitest run --coverage",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "@vitest/coverage-istanbul": "^3.2.4",
    "bootstrap": "^5.3.7",
    "highlight.js": "^11.11.1",
    "highlightjs-copy": "^1.0.6",
    "jsdom": "^26.1.0",
    "sass": "^1.89.2",
    "typedoc": "^0.28.7",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "sideEffects": true,
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "license": "UNLICENSED",
  "author": {
    "name": "Inzhenerka.Tech",
    "email": "info@inzhenerka.tech",
    "url": "https://inzhenerka.tech"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Inzhenerka/PumpRoom-SDK.git"
  },
  "homepage": "https://pumproom-sdk.inzhenerka-cloud.com/",
  "keywords": [
    "pumproom",
    "lms",
    "sdk",
    "integration",
    "education",
    "ai"
  ]
}
